<div class="container">
    <div style="text-align: center;"><img id="frontLogo"
            src="https://api.freelogodesign.org/files/12d3fe6a97424dd397f175ad3e6f39b8/thumb/logo_200x200.png?v=0" />
    </div>
    <div class="container" style="margin-top: 2%;text-align: center;">
        {{#if businessOwner}}
        <a href="" class="deleteBusiness" id="{{business.business_id}}">Delete Business</a>
        {{/if}}
        <h1 id="business_name">{{business.name}}</h1>
        <h2>Category: {{business.category}}</h2>
        <p id="description">{{business.description}}</p>
        {{#if business.reviews}}
        <h2 style="margin-top: 5%">Reviews:</h2>

        <div class="row">
            {{#each business.reviews as |review|}}
            <div class="card col-md-3" style="width: 18rem; float:none; display:inline-block">
                <div class="card-body">
                    <h5 class="card-title" id="userName">{{review.reviewer.name}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted" id="date">{{format_date review.date_created}}</h6>
                    <p class="card-text" id="reviewContent">{{review.review}}</p>
                    <p>Star rating: {{star_rating review.rating}}</p>
                    <a href="" class="deleteReview" id="{{review.review_id}}" key="{{review.business_id}}"
                        class="card-link">delete</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{/if}}


    <div class="centered-form__form">
        <form action="/chatroom">
            <div class="form-field">
                <h3>Hi <span id="chatUsername">{{user.name}}</span>, would you like to have a chat with us?</h3>
            </div>
            <div class="form-field">
                <button id="chat"><a href="/chatroom">Chat Here</a></button>
            </div>
        </form>
    </div>
    <div class="container" style="margin-top: 5%; margin-bottom: 5%" id="reviewForm">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8" style="border-style: solid;">
                <form style="margin-left: 3%;" class="formSub" id="{{business.business_id}}">
                    <div class="form-group">
                    </div>
                    <div class="star_rating" style="margin-top: 3%;">
                        <span class="heading" style="text-align: left;">User Rating: </span>
                        <span>1
                            <input type="radio" name="rate" id="1"></input>
                        </span>
                        <span>2
                            <input type="radio" name="rate" id="2"></input>
                        </span>
                        <span>3
                            <input type="radio" name="rate" id="3"></input>
                        </span>
                        <span>4
                            <input type="radio" name="rate" id="4"></input>
                        </span>
                        <span>5
                            <input type="radio" name="rate" id="5"></input>
                        </span>
                    </div>
                    <div class="form-group" style="margin-top: 5%;">
                        <h3 for="review">Review</h3>
                        <textarea class="form-control" name="review" id="review" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" id="{{business.business_id}}"
                        style="margin-top: 3%;">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

{{#if business.reviews}}
<script type="text/javascript" src="/js/deletereview.js"></script>
{{/if}}

{{#if businessOwner}}
<script type="text/javascript" src="/js/deletebusiness.js"></script>
{{/if}}
<script type="text/javascript" src="/js/createreview.js"></script>
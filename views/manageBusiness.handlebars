<div class="container" style="margin-top: 5%;text-align: center;">
    <div class="row" style="margin-top: 5%;">
        <h2>Your Businesses</h2>
        <ul class="list-group">
            {{#each businesses as |business| }}
            <li class="list-group-item" id="{{business.business_id}}" type="button">{{business.name}}</li>
            {{/each}}
        </ul>

        <div class="container" style="border-color: blue;">
            <h4 style="margin-top: 10%;">Please complete the form if you wish to add more business</h4>
            <form>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Business Name</label>
                    <input type="text" class="form-control" id="newBusinessName"
                        placeholder="Please enter your new business name.">
                </div>
                <div class="form-group">
                    <label>Select for Business category</label>
                    <select multiple class="form-control" id="catagory">
                        <option>1. Restaurant/Cafe</option>
                        <option>2. Service</option>
                        <option>3. Retail Shop</option>
                        <option>4. </option>
                        <option>5</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" id="newBusinessDescription" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mb-2" style="margin-top: 2%;">Submit</button>
            </form>
        </div>
    </div>
</div>
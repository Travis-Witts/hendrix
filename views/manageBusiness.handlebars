<div class="container" style="margin-top: 5%;text-align: center;">
    <div><img id="frontLogo"
        src="https://api.freelogodesign.org/files/12d3fe6a97424dd397f175ad3e6f39b8/thumb/logo_200x200.png?v=0" /></div>
    <div class="row" style="margin-top: 5%;">
        <h2>Your Businesses</h2>
        <ul class="list-group">
            {{#if businesses}}
            {{#each businesses as |business| }}
            <li class="list-group-item" id="{{business.business_id}}" type="button">{{business.name}}</li>
            {{/each}}
            {{else}}
            <h3>You don't have any businesses yet!</h3>
            {{/if}}
        </ul>
       

        <div class="container" style="margin-top: 10%;">
            <div class="row">
            <h4 >Please complete the form if you wish to add more business</h4>
            <div class="col-md-2"></div>
            <div class="col-md-8">
            <form>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Business Name</label>
                    <input type="text" class="form-control" id="newBusinessName"
                        placeholder="Please enter your new business name.">
                </div>
                <div class="form-group">
                    <label>Select for Business category</label>
                    <select multiple class="form-control" id="catagory">
                        <option>Clothing</option>
                        <option>Retail</option>
                        <option>Entertainment</option>
                        <option>Pub</option>
                        <option>Restaraunt</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" id="newBusinessDescription" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mb-2" style="margin-top: 2%;">Submit</button>
            </form>
            </div>
        </div>
    </div>
    </div>
</div>